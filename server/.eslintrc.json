{
  "env": {
    "browser": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base",
      "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "object-curly-newline": "off",
      "import/extensions": [
          "error",
          "ignorePackages",
          {
              "js": "never",
              "ts": "never"
          }
      ],
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-use-before-define": "off"
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [".js", ".ts"]
          }
      }
  }
}